<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/listAdapterLayout">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/listAdapterImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/listAdapterTextView"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/listAdapterImageView"
        android:layout_toEndOf="@+id/listAdapterImageView"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/listAdapterImageView" />
</RelativeLayout>